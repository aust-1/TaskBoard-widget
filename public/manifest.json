{
    "background_color": "#ffffff",
    "categories": [
        "productivity",
        "utilities"
    ],
    "description": "Affichez et gérez vos tâches Google Tasks dans un widget TaskBoard.",
    "dir": "ltr",
    "display": "standalone",
    "display_override": [
        "window-controls-overlay"
    ],
    "edge_side_panel": {
        "preferred_width": 480
    },
    "file_handlers": [
        {
            "accept": {
                "text/plain": [
                    ".todo"
                ]
            },
            "action": "/open-file"
        }
    ],
    "handle_links": "preferred",
    "iarc_rating_id": "e10plus",
    "icons": [
        {
            "sizes": "192x192",
            "src": "assets/icons/icon-192.png",
            "type": "image/png"
        },
        {
            "sizes": "512x512",
            "src": "assets/icons/icon-512.png",
            "type": "image/png"
        }
    ],
    "id": "/",
    "lang": "fr",
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "name": "TaskBoard Widget",
    "offline_page": "offline.html",
    "orientation": "portrait",
    "prefer_related_applications": false,
    "protocol_handlers": [
        {
            "protocol": "web+task",
            "url": "https://taskboard-widget.onrender.com/?task=%s"
        }
    ],
    "related_applications": [
        {
            "id": "/",
            "platform": "webapp",
            "url": "https://aust-1.github.io/TaskBoard-widget/manifest.json"
        }
    ],
    "scope": "/TaskBoard-widget/",
    "scope_extensions": [
        {
            "origin": "https://aust-1.github.io",
            "scopes": [
                "/TaskBoard-widget/"
            ]
        }
    ],
    "screenshots": [],
    "share_target": {
        "action": "/share-target",
        "enctype": "multipart/form-data",
        "method": "POST",
        "params": {
            "text": "text",
            "title": "title",
            "url": "url"
        }
    },
    "short_name": "Tasks",
    "shortcuts": [
        {
            "description": "Ouvrir la vue widget",
            "name": "Ouvrir Widget",
            "short_name": "Widget",
            "url": "/widget.html"
        },
        {
            "description": "Afficher la liste par défaut",
            "name": "Liste par défaut",
            "short_name": "Par défaut",
            "url": "/?listId=@default"
        }
    ],
    "start_url": "/TaskBoard-widget/index.html",
    "theme_color": "#317EFB",
    "widgets": [
        {
            "data": "https://taskboard-widget.onrender.com/api/widget-data?listId=@default",
            "icons": [
                {
                    "purpose": "any",
                    "sizes": "48x48",
                    "src": "assets/icons/widget-icon-48.png",
                    "type": "image/png"
                }
            ],
            "ms_ac_template": "widgets/taskboard.json",
            "name": "TaskBoard",
            "tag": "taskboard-widget",
            "update": 1800
        }
    ]
}
